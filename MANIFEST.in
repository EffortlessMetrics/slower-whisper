# MANIFEST.in - source distribution file selection for setuptools

# Core project metadata
include README.md
include LICENSE-APACHE
include LICENSE-MIT
include CHANGELOG.md
include CITATION.cff
include CONTRIBUTING.md
include SECURITY.md
include ROADMAP.md
include CLAUDE.md
include AGENTS.md
include THIRD_PARTY_NOTICES.md

# Packaging/build metadata
include pyproject.toml
include MANIFEST.in
include uv.lock
include flake.nix
include flake.lock
include Makefile
include pytest.ini
include pyrightconfig.json
include .pre-commit-config.yaml

# Dependency pins
include requirements.txt
include requirements-base.txt
include requirements-enrich.txt
include requirements-dev.txt

# Typed package markers
include slower_whisper/pipeline/py.typed
include slower_whisper/py.typed

# Docs and examples
recursive-include docs *.md *.txt *.json *.py
recursive-include examples *.py *.md *.json *.txt

# Benchmarks and tests
recursive-include benchmarks *.py *.md *.json *.jsonl *.txt *.csv *.wav *.rttm
recursive-include tests *.py *.json *.wav *.feature

# Operational/deployment assets
recursive-include scripts *.py *.sh *.md
recursive-include config *
recursive-include k8s *
recursive-include .github *.yml *.yaml *.md

# Exclude compiled/temporary artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude build and local output directories
prune build
prune dist
prune *.egg-info
prune docs/_build
prune benchmarks/results
prune benchmarks/test_audio
prune htmlcov
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
prune .benchmarks

# Exclude local data directories created at runtime
prune raw_audio
prune input_audio
prune transcripts
prune whisper_json

# Exclude virtual environments
prune venv
prune env
prune .venv
