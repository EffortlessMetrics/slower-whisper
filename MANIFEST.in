# MANIFEST.in - Specify additional files to include in source distribution
# This file is used by setuptools when building sdist (.tar.gz)
# Wheels automatically include Python packages specified in pyproject.toml

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include INSTALL.md
include PACKAGING.md
include RELEASE.md

# Include requirements files
include requirements.txt
include requirements-base.txt
include requirements-enrich.txt
include requirements-dev.txt

# Include configuration files
include pyproject.toml
include pytest.ini
include .pre-commit-config.yaml

# Include examples
recursive-include examples *.py
recursive-include examples *.md

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Include tests (for source distribution users who want to run tests)
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.wav

# Include GitHub workflows (for transparency)
recursive-include .github *.yml
recursive-include .github *.yaml
recursive-include .github *.md

# Include Docker files
include Dockerfile
include docker-compose.yml
include .dockerignore

# Exclude compiled files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune htmlcov
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
prune .benchmarks

# Exclude data directories (users create these themselves)
prune raw_audio
prune input_audio
prune transcripts
prune whisper_json

# Exclude virtual environments
prune venv
prune env
prune .venv
